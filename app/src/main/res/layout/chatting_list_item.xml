<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="10dp">


    //프로필
    <ImageView
        android:id="@+id/chatting_list_image_profile"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:layout_margin="5dp"
        android:src="@drawable/ic_information"

        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chatting_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사장님"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_toLeftOf="@+id/chatting_circle_imageview"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/chatting_list_send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello android"
            android:layout_below="@+id/chatting_name"
            android:layout_toLeftOf="@id/chatting_circle_imageview"
            android:layout_marginRight="16dp"
            android:padding="10dp"
            android:maxLines="1"
            android:maxLength="13"
            android:ellipsize="end"
            android:background="@drawable/me_message_box"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginRight="10dp">

            <!--보낸 시간-->
            <TextView
                android:id="@+id/chatting_list_send_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:35"
                android:textSize="15sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="right|bottom"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/chatting_list_send_message_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021년 09월 17일"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>