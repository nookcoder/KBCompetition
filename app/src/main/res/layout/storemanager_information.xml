<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/storemanager_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/icon_color"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text ="내 정보"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="23dp"
            />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="horizontal"
        android:background="@color/information_background"
        >

        //프로필
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/storemanager_image_profile"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_information"
            />

        //아이디랑 주
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            >
            <TextView
                android:id="@+id/storemanager_id"
                android:text="집밥연구소"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/storemanager_location"
                android:text="광명"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/storemanager_image_profile_editor"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_information"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        />

    <ImageButton
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        />

    <ImageButton
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        />

    <ImageButton
        android:id="@+id/withdrawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        />

</LinearLayout>