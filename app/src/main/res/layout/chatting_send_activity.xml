<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Chatting_Send_Activity">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/icon_color2"

        >

        <!--상대방이름 -->
        <TextView
            android:id="@+id/other_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text ="상대방 이름"
            android:textStyle="bold"

            android:layout_gravity="center"
            android:textSize="23dp"
            />
        <!--채팅방 나가기 버튼-->
        <ImageButton
            android:id="@+id/chatting_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_gravity="left"
            android:src="@drawable/ic_arrow_back"
            android:background="@android:color/transparent"
            android:onClick="click_back"
            />
    </androidx.appcompat.widget.Toolbar>


    <ListView
        android:id="@+id/chatting_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="#ffffff"
        android:dividerHeight="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="@drawable/edge"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/chatting_input_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="메시지를 입력해주세요"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:maxLines="3"/>
        <Button
            android:id="@+id/send_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전송"
            android:textSize="20dp"

            android:background="@drawable/radius"/>

    </LinearLayout>
</LinearLayout>


