<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/buyerImage"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.3"
            android:padding="5dp"
            android:src="@drawable/image_buyer"></ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:paddingStart="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/buyerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="17sp"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="직거래좋아요"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 님의"
                    android:textColor="@color/black"
                    android:textSize="17sp"></TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/productNameInPickupList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="동글동글 방울토마토 100g"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="  픽업날짜:  "
                            android:textColor="@color/grey"
                            android:textSize="13sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/pickupDate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="21/09/08"
                            android:textColor="@color/grey"
                            android:textSize="13sp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="  픽업시간:  "
                            android:textColor="@color/grey"
                            android:textSize="13sp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/pickupTime"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="오후 9시 30분"
                            android:textColor="@color/grey"
                            android:textSize="13sp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:background="@color/icon_color3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:paddingStart="7dp"
                        android:text="수량:"></TextView>

                    <TextView
                        android:id="@+id/pickupQuantity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="15sp"
                        android:autoSizeMaxTextSize="19sp"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:text="1"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="개"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        ></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>